    "/api/Library/purchase": {
      "post": {
        "tags": [
          "Library"
        ],
        "summary": "Realiza a compra de um jogo para um usuário",
        "requestBody": {
          "description": "Dados da compra",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PurchaseGameRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/PurchaseGameRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/PurchaseGameRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Compra realizada com sucesso",
